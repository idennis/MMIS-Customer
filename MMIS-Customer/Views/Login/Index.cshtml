@model MMIS_Customer.Models.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Username:</td>
            <td>
                @Html.EditorFor(model => model.CustomerUN)

        </td>
    </tr>
    <tr>
        <td>Password: </td>
        <td>
            @Html.PasswordFor(model => model.CustomerPW)

        </td>
    </tr>
    <tr>
        <td></td>
        <td><input class="btn-primary login-logout-button" type="submit" value="Login" /></td>
    </tr>
</table>


}