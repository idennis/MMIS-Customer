@model MMIS_Customer.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Username:</td>
            <td>
                @Html.EditorFor(model => model.CustomerUN)
            </td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>
                @Html.PasswordFor(model => model.CustomerPW)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input class="btn-primary login-logout-button" type="submit" value="Sign up" /></td>
        </tr>
    </table>

}