<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/slider")
   <link href="~/Content/jquery.bxslider.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Magic Supplies", "Index", "Home", null, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Stores", "Index", "Stores")</li>
                    <li>@Html.ActionLink("Cart", "Index", "Cart")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - s3471480 & s3485719</p>
        </footer>*@

    </div>
   
    <footer>
        <hr />
        <div class="col-mid-4">
            <p id="copyright">&copy; @DateTime.Now.Year - s3471480 & s3485719</p>
        </div>
        
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
