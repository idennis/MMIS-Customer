@model MMIS_Customer.Models.Cart

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>
<div class="ending-message">
    Transaction complete! Thank you for shopping with us.
</div>

<table class="table">
    <tr>
        <th>
            Store
        </th>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Subtotal
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CustomerPurchaseItems)
    {
        <tr>
            <td>
                @item.Store.Location.Name
            </td>
            <td>
                @item.Product.Title
            </td>
            <td>
                @item.Product.Price.ToString("C")
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @((item.Product.Price * item.Quantity).ToString("C"))
            </td>
        </tr>
    }

</table>

<div class="cart-total-price-panel row">
    <div class="total-price col-md-2">
        <div class="total-price-heading">
            Total Price
        </div>
        <div class="total-price-value">
            @Model.TotalPrice.ToString("C")
        </div>
    </div>
</div>

